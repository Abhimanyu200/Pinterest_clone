<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <h1 class="text-xl font-semibold mb-6">Pinterest</h1>
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
    <% posts.forEach(function(elem) { %>
      <div class="bg-zinc-700 rounded-xl overflow-hidden shadow-md hover:scale-105 transition-transform duration-300">
        <img 
          src="/images/uploads/<%= elem.image %>" 
          alt="Post Image" 
          class="w-full h-48 object-cover"
        >
        <div class="p-2 text-center">
          <h5 class="text-sm font-medium text-white"><%= elem.title %></h5>
          <h5 class="text-xs opacity-500 ">@<%= elem.user.username %></h5>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<% include ./partials/footer.ejs %>
